.femto
    position: relative
    width: 90%
    height: 500px
    overflow: hidden
    margin: 100px 5%

    &-slide
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        justify-content: center
        align-items: center
        overflow: hidden
        display: none
        overflow: hidden
        transition: 0.6s ease-in-out
        background-position: center
        background-size: cover
        video
        iframe
            width: 100%
            height: 100%

    &-description
        position: absolute
        top: 40%
        left: calc(50% - 200px)
        width: 400px
        margin: auto
        text-align: center
        text-shadow: 1px 2px 4px alpha($dark, 0.8)
        color: $white
        padding: 10px
        transition: 0.6s
        user-select: none
        cursor: default

    &-image
        display: none

    &-dots
        margin: 0
        padding: 0
        position: absolute
        bottom: 30px
        left: 50%
        display: flex
        z-index: 100
        list-style: none
        li:first-child
            margin-left: -50%
        .is-vertical &
            display: flex
            flex-direction: column
            left: auto
            right: 40px
            top: 40%
            bottom: auto
            li:first-child
                margin: 0

    &-dot
        display: block
        margin: 10px
        width: 10px
        height: 10px
        border-radius: 50%
        background-color: $white
        &.is-active
            background: $blue

    &-loader
        position: absolute
        z-index: 10
        height: 3px
        box-shadow: 0 2px 4px -2px alpha($dark, 0.9)
        top: 0
        left: 0
        background-color: alpha($white, 0.9)
        .femto:hover &
            opacity: 0

    &-next
    &-back
        position: absolute
        display: flex
        justify-content: center
        align-items: center
        padding: 30px
        top: 0
        z-index: 200
        height: 100%
        fill: $white
        color: $white
        &:hover
            fill: $blue
            color: $blue

    &-next
        right: 0
        .is-vertical &
            transform: rotate(90deg)
            height: auto
            left: auto
            top: auto
            right: 0
            bottom: 0

    &-back
        left: 0
        .is-vertical &
            transform: rotate(90deg)
            height: auto
            left: auto
            right: 0

/**
 modes
 */

.femto
    &-fading
        &.is-entering
        &.is-leaving
            opacity: 0
        &.is-active
            opacity: 1
            .femto-description
                opacity: 1
                transform: translate(0, 0)
        .femto-description
            opacity: 0
            transform: translate(0, -100%)
            transform-origin: center top


    &-sliding
        &.is-entering
            transform: translate3d(-100%, 0, 0)
        &.is-leaving
            transform: translate3d(100%, 0, 0)
        &.is-active
            transform: translate3d(0, 0, 0)

    &-falling
        &.is-entering
            transform: translate3d(0, -100%, 0)
        &.is-leaving
            transform: translate3d(0, 100%, 0)
        &.is-active
            transform: translate3d(0, 0, 0)



.is-entering
.is-leaving
.is-active
    display: block
    .femto-description
        transition-delay: 0.6s
