.beehive
  position: relative
  width: 100%
  height: 100%
  display: none
  &.is-active
    display: block
  &-cell
    position absolute
    top: 0
    left 0
    background-size: cover;
    background-position: center center
    width: 100%
    height: 100%
    opacity: 1
    transform: translate3d(0, 0, 0) rotateY(0deg)
    transition: 0.5s
    &.is-hidden
      opacity: 0
      transform-origin: center center
      transform: rotateY(-20deg) translate3d(-10px, -15px, 0)



.flow-beehive.is-entering
  .flow-description
    opacity: 0
    transform: translate3d(-50%, -250%, 0)

.flow-beehive.is-leaving
  display: none
  .flow-description
    transform: translate3d(-50%, 150%, 0)

.flow-beehive.is-active .flow-description
  opacity: 1
  transform: translate3d(-50%, -50%, 0)

