.beehive
  position: relative
  width: 100%
  height: 100%
  display: none
  &.is-active
    display: block
  &-cell
    position absolute
    top: 0
    left 0
    background-size: cover;
    background-position: center center
    width: 100%
    height: 100%
    opacity: 1
    transition: 0.5s
    will-change: opacity
    &.is-hidden
      opacity: 0