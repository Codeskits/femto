@import "src/stylus/colors"

.cube
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  transition: 0.6s ease
  transform-origin: center center
  transform-style: preserve-3d

  &-face
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: $dark
    background-position: inherit
    background-size: inherit
    background-repeat: no-repeat
    transition: 0.6s
    transform-origin: center center

.animation-3d
  position: relative
  display: none
  width: 100%
  height: 100%
  perspective: 1200px
  perspective-origin: center center
