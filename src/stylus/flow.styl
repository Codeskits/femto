.flow
  position: relative
  overflow: hidden
  margin: 100px 5%
  width: 90%
  height: 500px

  &-slide
    position: absolute
    top: 0
    left: 0
    display: none
    justify-content: center
    align-items: center
    overflow: hidden
    overflow: hidden
    width: 100%
    height: 100%
    background-position: center
    background-size: cover
    transition: 0.6s ease-in-out

    video,
    iframe
      width: 100%
      height: 100%

  &-description
    position: absolute
    top: 40%
    left: calc(50% - 200px)
    margin: auto
    padding: 10px
    width: 400px
    color: $white
    text-align: center
    text-shadow: 1px 2px 4px alpha($dark, 0.8)
    cursor: default
    transition: 0.6s
    user-select: none

  &-image
    display: none

  &-dots
    position: absolute
    bottom: 30px
    left: 50%
    z-index: 100
    display: flex
    margin: 0
    padding: 0
    list-style: none

    li:first-child
      margin-left: -50%

    .is-vertical &
      top: 40%
      right: 40px
      bottom: auto
      left: auto
      display: flex
      flex-direction: column

      li:first-child
        margin: 0

  &-dot
    display: block
    margin: 10px
    width: 10px
    height: 10px
    border-radius: 50%
    background-color: $white

    &.is-active
      background: $blue

  &-loader
    position: absolute
    top: 0
    left: 0
    z-index: 10
    height: 3px
    background-color: alpha($white, 0.9)
    box-shadow: 0 2px 4px -2px alpha($dark, 0.9)

  &-next,
  &-back
    position: absolute
    top: 0
    z-index: 200
    display: flex
    justify-content: center
    align-items: center
    padding: 30px
    height: 100%
    color: $white
    fill: $white

    &:hover
      color: $blue
      fill: $blue

  &-next
    right: 0
    &:hover
      cursor: e-resize
    .is-vertical &
      top: auto
      right: 0
      bottom: 0
      left: auto
      height: auto
      transform: rotate(90deg)
      &:hover
        cursor: s-resize

  &-back
    left: 0
    &:hover
      cursor: w-resize
    .is-vertical &
      right: 0
      left: auto
      height: auto
      transform: rotate(90deg)
      &:hover
        cursor: n-resize

/**
   modes
*/
.flow
  &-fading
    &.is-entering,
    &.is-leaving
      opacity: 0

    &.is-active
      opacity: 1

      .flow-description
        opacity: 1
        transform: translate(0, 0)

    .flow-description
      opacity: 0
      transform: translate(0, -100%)
      transform-origin: center top

  &-sliding
    &.is-entering
      transform: translate3d(-100%, 0, 0)

    &.is-leaving
      transform: translate3d(100%, 0, 0)

    &.is-active
      transform: translate3d(0, 0, 0)

  &-falling
    &.is-entering
      transform: translate3d(0, -100%, 0)

    &.is-leaving
      transform: translate3d(0, 100%, 0)

    &.is-active
      transform: translate3d(0, 0, 0)

.is-entering,
.is-leaving,
.is-active
  display: block

  .flow-description
    transition-delay: 0.6s
